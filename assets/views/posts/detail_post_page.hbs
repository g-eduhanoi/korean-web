<!DOCTYPE html>
<html lang="en">

<head>
    {{> head_component}}
    <title>{{post.title}}</title>
</head>

<body>
    {{> header_component}}

    <div class="main_content px-[15px] lg:px-[50px] xl:px-[100px] max-w-[1200px] mx-auto bg-white">
            <!--Second breadcrumb-->
            <nav class="w-full rounded-md my-[20px] text-[14px]">
                <ol class="list-reset flex">
                    <li>
                        <a href="/"
                            class="text-primary transition duration-150 ease-in-out hover:text-primary-600 focus:text-primary-600 active:text-primary-700 dark:text-primary-400 dark:hover:text-primary-500 dark:focus:text-primary-500 dark:active:text-primary-600">
                            Trang chủ
                        </a>
                    </li>
                    <li>
                        <span class="mx-2 text-neutral-500 dark:text-neutral-400">/</span>
                    </li>
                    <li>
                        <a href="/{{post.category.slug}}"
                            class="text-primary transition duration-150 ease-in-out hover:text-primary-600 focus:text-primary-600 active:text-primary-700 dark:text-primary-400 dark:hover:text-primary-500 dark:focus:text-primary-500 dark:active:text-primary-600">
                            {{post.category.name}}
                        </a>
                    </li>

                    <li>
                        <span class="mx-2 text-neutral-500 dark:text-neutral-400">/</span>
                    </li>
                    <li class="text-neutral-500 dark:text-neutral-400">
                        {{post.title}}
                    </li>

                </ol>
            </nav>

            <div class="post_title">
                <h1 class="text-3xl font-semibold text-center">
                    {{post.title}}
                </h1>

                {{!-- <p class="text-neutral-200 text-[13px]">
                    <span>
                        Ngày đăng:
                    </span>
                    <span>
                        {{dateTimeFormat post.createdAt }}
                    </span>
                </p> --}}

                <figure class="grid gap-[5px]">
                    <img class="mx-auto max-w-[950px] max-h-[450px] mt-[20px] block" src="{{post.thumbnail}}">
                    <figcaption class="text-center text-gray-400">
                        {{post.imageCaption}}
                    </figcaption>
                </figure>

            </div>

            <div class="post_content mt-[20px] bg-[#FAFAFA] p-[20px] pt-[5px]">

                <div>
                    {{{post.content}}}
                </div>

                {{#if post.tags.length}}
                <div class="flex gap-2 items-center mt-3">
                    <span class="pt-[10px] font-semibold">Thẻ: </span>

                    <ul class="post_tags flex gap-2">
                        {{#each post.tags}}
                        <li
                            class="bg-[#EEF4FF] rounded-[15px] text-[11px] px-2 py-1 hover:scale-[1.05] duration-150 ease-in-out cursor-pointer">
                            {{name}}
                        </li>
                        {{/each}}
                    </ul>
                </div>
                {{/if}}


            </div>

            <section class="my-[50px]">
                <h3 class="text-2xl font-semibold">Tin Lien Quan</h3>

                <div class="flex flex-wrap gap-[20px] mt-4">

                    {{#each relatedPosts}}
                    <div class="w-[100%] sm:w-[30%] lg:w-[18%]">
                        <a href="/bai-viet/{{slug}}/{{id}}">
                            <img class="w-full h-[250px] sm:h-[170px] hover:scale-[1.05] duration-200 ease-in-out"
                                src="{{thumbnail}}" alt="">
                        </a>

                        <div class="post_info grid gap-3 mt-3">
                            <div class="post_meta text-[14px] text-[#6941C6]">
                                <span class="post_meta_item"> {{ category.name }} </span>
                                -
                                <span class="post_meta_item"> {{recentDate createdAt }} </span>
                            </div>

                            <div class="post_content">
                                <a href="/faf/fas"
                                    class="hover:underline flex justify-between items-center duration-200 ease-in-out">
                                    <h2 class="post_title text-[25px] text-[#101828]">
                                        {{title}}
                                    </h2>

                                    <svg width="25" height="25" viewBox="0 0 33 39" fill="none"
                                        xmlns="http://www.w3.org/2000/svg">
                                        <path
                                            d="M10.0508 28.8506L23.3557 15.5456M23.3557 15.5456H10.0508M23.3557 15.5456V28.8506"
                                            stroke="#101828" stroke-width="2.66099" stroke-linecap="round"
                                            stroke-linejoin="round" />
                                    </svg>


                                </a>

                                <a href="/bai-viet/{{slug}}/{{id}}" class="hover:underline duration-200 ease-in-out">

                                    <p class="post_excerpt text-[16px] text-[#667085]">
                                        {{excerpt}}
                                    </p>
                                </a>

                            </div>

                            <ul class="post_tags flex gap-2">
                                {{#each tags}}
                                <li
                                    class="bg-[#EEF4FF] rounded-[15px] text-[11px] px-2 py-1 hover:scale-[1.05] duration-150 ease-in-out cursor-pointer">
                                    {{name}}
                                </li>
                                {{/each}}
                            </ul>

                        </div>
                    </div>
                    {{/each}}

                </div>
            </section>
    </div>

    {{> footer_component}}
</body>

</html>