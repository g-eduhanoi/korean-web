<!DOCTYPE html>
<html lang="en">

<head>
    {{> head_component}}
    <title>
        Blogs
    </title>
    <link rel="stylesheet" href="/public/css/taildwin-out.css" />
</head>

<body>

    {{> header_component}}

    <div class="main_content px-[15px] pb-[35px] lg:px-[100px] max-w-[1800px] mx-auto mx-auto bg-white">
        <!--Second breadcrumb-->
        <nav class="w-full rounded-md my-[20px] text-[14px]">
            <ol class="list-reset flex">
                <li>
                    <a href="/"
                        class="text-primary transition duration-150 ease-in-out hover:text-primary-600 focus:text-primary-600 active:text-primary-700 dark:text-primary-400 dark:hover:text-primary-500 dark:focus:text-primary-500 dark:active:text-primary-600">
                        {{ t 'test.navbar.home' }}
                    </a>
                </li>
                <li>
                    <span class="mx-2 text-neutral-500 dark:text-neutral-400">/</span>
                </li>
                <li class="text-neutral-500 dark:text-neutral-400"> Blogs</li>
            </ol>
        </nav>


        {{#each sectionData }}
        <section class="">
            <h3 class="text-2xl font-semibold">
                {{ title }}
            </h3>

            <div class="flex flex-wrap gap-[15px] md:gap-[26px] mt-4">
                {{#each posts }}
                <div class="w-[48%] sm:w-[31%]">
                    <a href="/bai-viet/{{slug}}/{{id}}">
                        <img class="w-full h-[250px] hover:scale-[1.05] duration-200 ease-in-out border rounded"
                            src="{{ thumbnail }}" alt="">
                    </a>

                    <div class="post_info grid gap-3 mt-3">
                        <div class="post_meta text-[14px] text-[#6941C6]">
                            <span class="post_meta_item">
                                {{ category.name }}
                            </span>
                            -
                            <span class="post_meta_item">
                                {{vnDateFormat createdAt }}
                            </span>
                        </div>

                        <div class="post_content">
                            <a href="/bai-viet/{{slug}}/{{id}}"
                                class="hover:underline flex justify-between items-center duration-200 ease-in-out">
                                <h2 class="post_title text-[25px] text-[#101828]">
                                    {{ title }}
                                </h2>

                                <svg width="25" height="25" viewBox="0 0 33 39" fill="none"
                                    xmlns="http://www.w3.org/2000/svg">
                                    <path
                                        d="M10.0508 28.8506L23.3557 15.5456M23.3557 15.5456H10.0508M23.3557 15.5456V28.8506"
                                        stroke="#101828" stroke-width="2.66099" stroke-linecap="round"
                                        stroke-linejoin="round" />
                                </svg>


                            </a>

                            <a href="/bai-viet/{{slug}}/{{id}}" class="hover:underline duration-200 ease-in-out">

                                <p class="post_excerpt text-[16px] text-[#667085]">
                                    {{ excerpt }}
                                </p>
                            </a>

                        </div>

                        <ul class="post_tags flex gap-2">
                            {{#each tags}}
                            <li
                                class="bg-[#EEF4FF] rounded-[15px] text-[11px] px-2 py-1 hover:scale-[1.05] duration-150 ease-in-out cursor-pointer">
                                {{name}}
                            </li>
                            {{/each}}
                        </ul>

                    </div>
                </div>
                {{/each}}

            </div>


            <div class="flex justify-center">
                <button
                    class="bg-[#524FD5] hover:bg-[#605ecb] mt-[15px] text-white font-bold py-1 px-5 rounded duration-200 ease-in-out"
                    type="button">
                    <a href="/{{slug}}">
                        Xem tất cả
                    </a>
                </button>
            </div>
        </section>

        {{/each}}
    </div>

    {{> footer_component}}
</body>

</html>